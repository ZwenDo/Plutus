<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        tools:ignore="ScopedStorage" />
    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/plutus_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Plutus"
        tools:targetApi="31">
        <activity
            android:name=".LoadingView"
            android:exported="false"
            android:label="@string/title_activity_loading_view"
            android:theme="@style/Theme.Plutus" />
        <activity
            android:name=".TagsView"
            android:exported="false"
            android:label="@string/title_activity_tags_view"
            android:theme="@style/Theme.Plutus" />
        <activity
            android:name=".TransactionView"
            android:exported="false"
            android:label="@string/title_activity_transaction_view"
            android:theme="@style/Theme.Plutus" />
        <activity
            android:name=".Transaction"
            android:exported="false"
            android:label="@string/title_activity_transaction"
            android:theme="@style/Theme.Plutus" />
        <activity
            android:name=".Pills"
            android:exported="false"
            android:label="@string/title_activity_pills"
            android:theme="@style/Theme.Plutus" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Plutus">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>